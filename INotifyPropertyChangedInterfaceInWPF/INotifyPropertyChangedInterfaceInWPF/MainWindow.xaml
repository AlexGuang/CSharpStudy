<Window x:Class="INotifyPropertyChangedInterfaceInWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INotifyPropertyChangedInterfaceInWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <StackPanel>
        <Label Content="Num1" FontSize="26"></Label>
        <TextBox FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center" Name="Num1" Width="200" Height="110" Text="{Binding Path=Num1,Mode=TwoWay}" ></TextBox>
        <Label Content="Num2" FontSize="26"></Label>
        <TextBox FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"  Name="Num2" Width="200" Height="110" Text="{Binding Path=Num2,Mode=TwoWay}" ></TextBox>
        <Label Content="Result of Num1 + Num2" FontSize="26"></Label>
        <TextBox FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"  Name="Result" Width="200" Height="110" Text="{Binding Path=Result,Mode=TwoWay}" ></TextBox>
    </StackPanel>
</Window>
