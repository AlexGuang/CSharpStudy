<Window x:Class="PasswordBoxWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBoxWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="15">
        <Label Content="Username:" FontSize="32"></Label>
        <TextBox Name="tbUsername"></TextBox>
        <Label Content="Password:" FontSize="32"></Label>
        <PasswordBox PasswordChar="^"></PasswordBox>
        <Button Margin=" 15" Content="Login" Height="32" Click="Button_Click" FontSize="23" FontWeight="Bold"></Button>
        
        
    </StackPanel>
</Window>
